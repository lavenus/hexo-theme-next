// Custom styles.
 //头像以圆形显示
 .site-author-image {
   border-radius: 100%;
   padding: 2px;
   border: 2px dashed #fff;
   animation: cycle 2s 0.5s forwards;
   transition: border-radius 2s;
 }
 //博主名字号大小
.site-author-name {
  font-size: 16px;
}

// 代码块自定义样式``内的
code {
  color: #fc6423;
  background: #fbf7f8;
  margin: 2px;
}
// 大代码块的自定义样式
.highlight, pre {
  margin: 5px 0;
  padding: 5px;
  border-radius: 3px;
}
.highlight, code, pre {
  border: 1px solid #d6d6d6;
}
